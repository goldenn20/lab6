<Window x:Class="_2sem_3lab.Edit_Timer_Wnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2sem_3lab"
        mc:Ignorable="d"
        Title="EditTimerWnd" Height="400" Width="300">
    <Grid>
        <Label x:Name="lbl_hours" Content="Часы" HorizontalAlignment="Left" Margin="31,70,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_minutes" Content="Минуты&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_seconds" Content="Секунды&#xA;" HorizontalAlignment="Left" Margin="199,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_Timer_Hours" HorizontalAlignment="Left" Margin="17,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66"/>
        <TextBox x:Name="TB_Timer_Minutes" HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66"/>
        <TextBox x:Name="TB_Timer_Seconds" HorizontalAlignment="Left" Margin="199,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66"/>
        <Calendar x:Name="Timer_Calendar" HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Add_Timer" Content="Сохранить и закрыть" HorizontalAlignment="Left" Margin="163,311,0,0" VerticalAlignment="Top" Click="btn_Add_Timer_Click"/>

    </Grid>
</Window>
